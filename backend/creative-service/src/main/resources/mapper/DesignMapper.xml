<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiyi.creative.mapper.DesignMapper">
    
    <!-- 动态插入，只插入非 null 字段 -->
    <insert id="insertSelective" parameterType="com.jiyi.creative.entity.Design" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO design
        <trim prefix="(" suffix=")" suffixOverrides=",">
            designer_id,
            <if test="contestId != null">contest_id,</if>
            <if test="callId != null">call_id,</if>
            title,
            <if test="categoryType != null">category_type,</if>
            description,
            <if test="designConcept != null and designConcept != ''">design_concept,</if>
            files,
            <if test="coverImage != null and coverImage != ''">cover_image,</if>
            <if test="copyrightStatement != null and copyrightStatement != ''">copyright_statement,</if>
            <if test="tags != null and tags != ''">tags,</if>
            status,
            <if test="rejectReason != null and rejectReason != ''">reject_reason,</if>
            votes,
            views,
            created_at,
            updated_at
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            #{designerId},
            <if test="contestId != null">#{contestId},</if>
            <if test="callId != null">#{callId},</if>
            #{title},
            <if test="categoryType != null">#{categoryType},</if>
            #{description},
            <if test="designConcept != null and designConcept != ''">#{designConcept},</if>
            #{files},
            <if test="coverImage != null and coverImage != ''">#{coverImage},</if>
            <if test="copyrightStatement != null and copyrightStatement != ''">#{copyrightStatement},</if>
            <if test="tags != null and tags != ''">#{tags},</if>
            #{status},
            <if test="rejectReason != null and rejectReason != ''">#{rejectReason},</if>
            #{votes},
            #{views},
            NOW(),
            NOW()
        </trim>
    </insert>
    
</mapper>
